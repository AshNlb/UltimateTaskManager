{
  "name": "taskflow-desktop",
  "productName": "TaskFlow",
  "version": "1.0.0",
  "description": "TaskFlow - Ultimate Task Manager Desktop Application",
  "main": "main.js",
  "author": "TaskFlow",
  "license": "SEE LICENSE IN ../LICENSE",
  "homepage": "https://github.com/AshNlb/UltimateTaskManager",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --dir",
    "build:win:installer": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "express": "^4.21.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.taskflow.app",
    "productName": "TaskFlow",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png",
      "../backend/**/*",
      "../frontend/dist/**/*",
      "!../backend/node_modules",
      "!../backend/prisma/dev.db*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!node_modules", "!prisma/dev.db*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "signDlls": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TaskFlow",
      "differentialPackage": false
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office",
      "maintainer": "TaskFlow <AshNlb@users.noreply.github.com>"
    }
  }
}
